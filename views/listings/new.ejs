<% layout('layouts/boilerplate') %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <br></br>
    <h3>Create a New Listing </h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listingobj[title]" 
        placeholder="Add a catchy title" 
        type="text"
        class="form-control"
        required
        />
        </div>
        
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listingobj[description]" 
            class="form-control" required
            ></textarea>
        </div>
        
        
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listingobj[image]" placeholder="enter image URL/Link" type="text" class="form-control">
        </div>
        
        
        <div class="row">
            <div class="mb-3 col-md-4" >
                <label for="price" class="form-label">Price</label>
                <input name="listingobj[price]" placeholder="1200" type="number" class="form-control" required>
            </div>
        
        
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listingobj[country]" placeholder="India" type="text" class="form-control" required>
            </div>
        </div>
        
        
        <div class="mb-3">           
            <label for="location" class="form-label">Location</label>
            <input name="listingobj[location]" placeholder="Jaipur,Rajasthan" type="text" class="form-control" required>
        </div>
        
        <br></br>
        <button class="btn btn-dark add-btn">ADD</button>
        <br></br>
    </form>
</div>
</div>
</body>