<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-8 offset-2">
<body>
    <h3>Create a New Listing </h3>
    <form method="POST" action="/listings">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listingobj[title]" 
        placeholder="enter title" 
        type="text"
        class="form-control"
        />
        </div>
        
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listingobj[description]" 
            class="form-control"
            ></textarea>
        </div>
        
        
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listingobj[image]" placeholder="enter image URL/Link" type="text" class="form-control">
        </div>
        
        
        <div class="row">
            <div class="mb-3 col-md-4" >
                <label for="price" class="form-label">Price</label>
                <input name="listingobj[price]" placeholder="enter price" type="number" class="form-control">
            </div>
        
        
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listingobj[country]" placeholder="enter country" type="text" class="form-control">
            </div>
        </div>
        
        
        <div class="mb-3">           
            <label for="location" class="form-label">Location</label>
            <input name="listingobj[location]" placeholder="enter location" type="text" class="form-control">
        </div>
        
    
        <button class="btn btn-dark">ADD</button>
    </form>
</div>
</div>
</body>